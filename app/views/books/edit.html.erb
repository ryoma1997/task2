<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
<% end %>

<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<% if flash[:error] %>
  <p><%= flash[:error] %></p>
  <p>errors</p>
<% end %>

